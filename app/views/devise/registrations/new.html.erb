<body class="bg-primary">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="card shadow-lg border-3 rounded-lg mt-1 mb-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-2">Sign up</h3></div>
              <div class="card-body">

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>

                              <!-- ##first name and last name-->
                              <div class="row mb-3">
                                <div class="col-md-6">
                                  <div class="form-floating mb-3 mb-md-0">

                                    <div class="field">
                                      <%= f.label :first_name  %>
                                      <%= f.text_field :first_name, autofocus: true,autocomplete: "first_name", class: 'form-control', placeholder: 'Enter your first name' %>
                                    </div>

                                  </div>
                                </div>

                                <div class="col-md-6">
                                  <div class="form-floating">

                                    <div class="field">
                                      <%= f.label :last_name %>
                                      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control', placeholder: 'Enter your last name' %>
                                    </div>

                                  </div>
                                </div>
                              </div> 
                              <!-- ##end first name and last name -->

                              <div class="row mb-3">
                                <div class="col-md-6">
                                  <div class="form-floating mb-3 mb-md-0">

                                    <div class="field">
                                      <%= f.label :email %><br/>
                                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'name@gmail.com'%>
                                    </div>

                                  </div>
                                </div>

                                <div class="col-md-6">
                                  <div class="form-floating">

                                    <div class="field" >
                                      <%= f.label :dob %><br />
                                      <%= f.date_field :dob, autofocus: true, class: 'form-control',autocomplete: "dob" %>
                                    </div>

                                  </div>
                                </div>
                              </div>
                              <!-- #end of email and DOB-->


                              <div class="row mb-3">
                                <div class="col-md-6">
                                  <div class="form-floating mb-3 mb-md-0">

                                    <div class="field">
                                      <%= f.label :password %>
                                      <% if @minimum_password_length %>
                                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                                      <% end %><br />
                                      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control',placeholder:"Create a password"  %>
                                    </div>

                                  </div>
                                </div>

                                <div class="col-md-6">
                                  <div class="form-floating mb-3 mb-md-0">

                                    <div class="field">
                                      <%= f.label :password_confirmation %><br />
                                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control',placeholder:"Confirm password"%>
                                    </div>

                                  </div>
                                </div>
                              </div>
                              <!-- #end of password -->


                              <!-- ##first name and last name-->
                              <div class="row mb-3">
                                <div class="col-md-6">
                                  <div class="form-floating mb-3 mb-md-0">

                                    <div class="field">
                                      <%= f.label :status  %>
                                      <%= f.select :status, User.statuses.keys(&:capitalize), selected: 'student' %>
                                    </div>

                                  </div>
                                </div>

                                <div class="col-md-6">
                                  <div class="form-floating">

                                  <div>
                                  <%= f.file_field :avatar %>
                                  </div>

                                  </div>
                                </div>
                              </div> 
                            


                              <div class="mt-4 mb-1 ">
                                <div class="actions" >
                                  <%= f.submit "Sign up",class:"btn btn-primary btn-block"  %>
                                </div>
                              </div> 
                    <%end%>                           
                
                
              </div>
            <div class="card-footer text-center py-2">
            <div class="small">Have an account? Go to login<br/><%= render "devise/shared/links" %></div>
            </div>
            </div>
    </div>
</body>

