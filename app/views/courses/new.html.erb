<div>
  <center>
    <h1>Create New Course</h1>
    <%= form_for(:course,:url =>{:action => 'create'}) do |f| %>
        <div class="field">
          <%= f.label :course_id %><br>
          <%= f.text_field :course_id %>
          </div>
        <div class="field">
          <%= f.label :course_title %><br>
          <%= f.text_field :course_title %>
        </div>
        <div class="field">
          <%= f.label :course_description %><br>
          <%= f.text_area :course_description %><br/>
        </div>

        <div class="actions">
          <%= f.submit "Create", class:"btn btn-primary"%>
        </div>
    <% end %>
  </center>
</div>
<div>
  <nav class="navbar navbar-default">
    <%=link_to({:controller => 'courses' , :action => 'index'}, {:class => 'btn btn-primary '}) do%>
        <i>Back</i><%end%>
  </nav>
</div>