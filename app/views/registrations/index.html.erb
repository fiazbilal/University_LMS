
<% current_user.registrations.each do |course| %>       
    <% tempCourse = Course.find(course.Course_id) %>
        <div class="row">
        <div class="col-lg-6 mb-4">
        <div>
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title">
                    <%= link_to tempCourse.course_title, course_path(tempCourse.id) %>
                    </h4>
                    <p>
                    <%=tempCourse.course_description%>
                    </p>
                </div>
                <div class="card-body">
                <%= form_for tempCourse do |f| %>
                    <h4 class="card-title">
                    <%= f.label :Assignment  %>
                    <%= f.file_field :avatar %>
                    </h4>
                    
                    <%= f.submit "Upload" ,class:"btn btn-primary btn-block"  %>
                <% end %>
                </div>
            </div>
         </div>
     </div>
</div>
<% end %>